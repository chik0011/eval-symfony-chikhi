{% extends 'base.html.twig' %}

{% block title %}CRequest index{% endblock %}

{% block body %}
    <h1 class="mt-3">CRequest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c_request in c_requests %}
            <tr>
                <td>{{ c_request.id }}</td>
                <td>{{ c_request.title }}</td>
                <td>{{ c_request.content }}</td>
                <td>{{ c_request.createdAt ? c_request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('demande_show', {'id': c_request.id}) }}">Voir</a>
                    <a class="btn btn-success" href="{{ path('demande_edit', {'id': c_request.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demande_new') }}">Crée une nouvelle requête</a>
{% endblock %}
